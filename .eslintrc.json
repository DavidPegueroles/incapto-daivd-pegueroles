{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-typescript/base", "plugin:prettier/recommended"],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": { "prettier/prettier": ["error"] }
}
